                    <div class="flex flex-wrap gap-2">
                      <span class="inline-flex items-center rounded-full bg-neutral-100 px-3 py-0.5 text-xs font-medium text-neutral-600 transition-colors hover:bg-neutral-200 dark:bg-neutral-800 dark:text-neutral-300 dark:hover:bg-neutral-700">
                        {item.type}
                      </span>
                      <span class="inline-flex items-center rounded-full bg-neutral-100 px-3 py-0.5 text-xs font-medium text-neutral-600 transition-colors hover:bg-neutral-200 dark:bg-neutral-800 dark:text-neutral-300 dark:hover:bg-neutral-700">
                        {item.frequency}
                      </span>
                    </div>

                    <div class="flex items-baseline gap-1 mt-4">
                      <span class="text-3xl font-bold text-neutral-900 dark:text-neutral-100">
                        {item.price}
                      </span>
                      <span class="text-neutral-500 dark:text-neutral-400">
                        {item.currency}
                      </span>
                      <span class="text-sm text-neutral-500 dark:text-neutral-400 ml-1">
                        / {item.frequency.toLowerCase()}
                      </span>
                    </div>
                  </div>
                </div>
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>

