---
import Layout from "../layouts/Layout.astro";
import source from "../../public/source.json";

const getTagColor = (type: string) => {
  const colors = {
    Group: "bg-blue-50 text-blue-700 dark:bg-blue-950 dark:text-blue-300",
    Personal:
      "bg-purple-50 text-purple-700 dark:bg-purple-950 dark:text-purple-300",
    Yearly: "bg-green-50 text-green-700 dark:bg-green-950 dark:text-green-300",
    Monthly:
      "bg-orange-50 text-orange-700 dark:bg-orange-950 dark:text-orange-300",
    Quarterly: "bg-pink-50 text-pink-700 dark:bg-pink-950 dark:text-pink-300",
  };
  return (
    colors[type] ||
    "bg-gray-50 text-gray-700 dark:bg-gray-950 dark:text-gray-300"
  );
};
---

