        <div class="max-w-5xl mx-auto relative w-full mt-8">
          <div
            class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 w-full relative"
          >
            {
              source.map((item) => (
                <div class="border rounded-lg flex flex-col justify-between gap-2 relative p-4 shadow-sm hover:shadow-md transition-shadow duration-300 dark:hover:border-primary border-orange-300 dark:border-orange-400/50 border-spacing-1.5 bg-orange-50/50 dark:bg-orange-950/10 w-full mx-auto">
                  <div class="flex flex-col gap-4">
                    <h3 class="font-semibold text-lg text-neutral-900 dark:text-neutral-100">
                      {item.name}
